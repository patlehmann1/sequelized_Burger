<div class="container text-white">
	<div class="row">
		<div class="col-xs-12 col-lg-12 text-center mt-5" id="top-bar">
			<img src="/img/all_american_burger.jpg" alt="burger" class="burgerImg img-fluid" />
			<h1> Eat-Da-Burger! </h1>
		</div>
	</div>
	<div class="row main-content">
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless devoured}}
				<div class="col-xs-9 text-center">
					<textarea class="form-control" id="exampleFormControlTextarea1" rows="1">{{id}}. {{burger_name}}</textarea>
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/burgers/update/{{id}}/1?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="burger_id" value={{id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each burger_data}}
			  	{{#if devoured}}
			  		<input class="form-control" type="text" placeholder="{{id}}. {{burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
						<br><br><br>
				<button type="submit" class="btn btn-primary btn-lg" id="text-enter-button">Submit</button>
			</form>
			<p>Enter the type of burger you would like to eat, press the submit button and then click the DEVOUR IT button to eat it!</p>
		</div>
	</div>
</div>